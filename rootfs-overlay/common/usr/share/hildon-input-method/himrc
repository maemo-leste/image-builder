# Special Character View

style "scv-button" {
        GtkButton::child_spacing = 0

        engine "pixmap" {
                image {
                        function = BOX
                        state = ACTIVE
                        file = "SCVButtonPressed.png"
                        border = { 16, 16, 0, 0 }
                }
                image {
                        function = BOX
                        state = INSENSITIVE
                        file = "SCVButtonDisabled.png"
                        border = { 16, 16, 0, 0 }
                }
                image {
                        function = BOX
                        file = "SCVButtonNormal.png"
                        border = { 16, 16, 0, 0 }
                }
        }
}
